extends layout

block content
    != markdownProgram

    if showPresentationList
        h2=__("Presentations")
        ol
            each guest in guests
                li
                    b
                        = guest.presentationTitle

                    |  (
                    = guest.presentationLength
                    | ) - 
                    = guest.name
                    br
                    != marked( guest.presentationDescription)
